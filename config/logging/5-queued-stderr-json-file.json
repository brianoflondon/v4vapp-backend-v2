{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s.%(msecs)03d %(levelname)-8s %(module)-22s %(lineno)6d : %(message)s",
            "datefmt": "%Y-%m-%dT%H:%M:%S%z"
        },
        "json": {
            "()": "v4vapp_backend_v2.config.mylogger.MyJSONFormatter",
            "fmt_keys": {
                "level": "levelname",
                "message": "message",
                "timestamp": "timestamp",
                "logger": "name",
                "module": "module",
                "function": "funcName",
                "line": "lineno",
                "thread_name": "threadName"
            }
        }
    },
    "filters": {
        "no_errors": {
            "()": "v4vapp_backend_v2.config.mylogger.NonErrorFilter"
        },
        "notification_filter": {
            "()": "v4vapp_backend_v2.config.mylogger.NotificationFilter"
        },
        "error_tracking": {
            "()": "v4vapp_backend_v2.config.mylogger.ErrorTrackingFilter"
        }
    },
    "handlers": {
        "stderr": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "simple",
            "stream": "ext://sys.stderr",
            "filters" : ["error_tracking"]
        },
        "file_json": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "json",
            "filename": "logs/v4vapp-backend-v2.log.jsonl",
            "maxBytes": 50000000,
            "backupCount": 10,
            "filters": ["error_tracking"]
        },
        "queue_handler": {
            "class": "logging.handlers.QueueHandler",
            "handlers": [
                "file_json",
                "notification"
            ],
            "respect_handler_level": true,
            "filters": ["error_tracking"]
        },
        "notification": {
            "class": "v4vapp_backend_v2.config.mylogger.CustomNotificationHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filters" : ["error_tracking", "notification_filter"]
        }
    },
    "loggers": {
        "root": {
            "level": "DEBUG",
            "handlers": [
                "queue_handler"
            ]
        }
    }
}
