    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "consoleName": "${file}",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "LND Node Monitor - Voltage",
            "type": "debugpy",
            "consoleName": "LND Node Monitor - Voltage",
            "request": "launch",
            "program": "src/lnd_node_monitor.py",
            "args": [
                "voltage"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "LND Node Monitor - Umbrel",
            "type": "debugpy",
            "consoleName": "LND Node Monitor - Umbrel",
            "request": "launch",
            "program": "src/lnd_node_monitor.py",
            "args": [
                "umbrel"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Invoice Experiments",
            "type": "debugpy",
            "consoleName": "Invoice Experiments",
            "request": "launch",
            "program": "src/invoice_experiments.py",
            "console": "integratedTerminal"
        }
    ]
}